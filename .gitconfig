[core]
	autocrlf = input
	editor = nvim -c \"set fenc=utf-8\"
	pager = lv
	precomposeunicode = true
	preloadindex = true
	safecrlf = true
	excludesfile = /Users/kkori/.gitignore_global
[push]
	default = current
[difftool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	grep = auto
[merge]
[alias]
	st = status
	co = checkout
	ci = commit -v
	di = diff
	br = branch --sort=-authordate
	puhs = push
	psuh = push
	pus = push
	puh = push
	pl = !git pull && git submodule update --init
	p = pull
	pu = push
	puu = push -u
	put = push --tags
	c = commit -v
	o = checkout
	t = checkout -t
	b = checkout -b
	r = remote
	pur = pull-request
	see = browse
	m = merge
	mn = merge --no-ff
	ag = !git ls-files | xargs ag
	g = "!git ls-files | xargs ag --pager=\"less -R\" --nogroup --color-match=0\\;31 --color-path=0\\;0 --no-numbers 2> /dev/null"
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[merge]
	conflictstyle = diff3
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts nvim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[diff]
	compactionHeuristic = true
	tool = diffmerge
[ghq]
	root = ~/src
[user]
	name = kkori
	email = kkori@yahoo-corp.jp
[commit]
	template = /Users/kkori/.stCommitMsg
[difftool]
	prompt = false
[difftool "diffmerge"]
	path = /Applications/DiffMerge.app/Contents/Resources/diffmerge.sh
[mergetool]
	keepBackup = false
